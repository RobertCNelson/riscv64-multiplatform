+                next_u_addr = dstaddr+1;
+                next_v_addr = dstaddr+3;
+                y_rgb_ofst = 0;
+                uofst = 0;
+                v_uvofst = 0;
+            } else if(dst->format == COLOR_YUV422_VYUY) {
+                next_y_rgb_addr = dstaddr+1;
+                next_u_addr = dstaddr+2;
+                next_v_addr = dstaddr;
+                y_rgb_ofst = 0;
+                uofst = 0;
