+
+static struct platform_driver stf_vin_driver = {
+	.probe = stf_vin_probe,
+	.remove = stf_vin_remove,
+	.driver = {
+		   .name = DRV_NAME,
+		   .of_match_table = of_match_ptr(stf_vin_of_match),
+		   },
+};
