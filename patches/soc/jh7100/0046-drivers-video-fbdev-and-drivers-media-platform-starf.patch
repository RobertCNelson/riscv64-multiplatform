+void isp_ddr_config(struct stf_vin_dev *vin)
+{
+	isp_ddr_format_config(vin);
+	isp_ddr_resolution_config(vin);
+	/* reset isp */
+	isp_reset(vin);
+	/* enable isp */
+	isp_enable(vin);
+	if(SRC_DVP_SENSOR_VIN_ISP == vin->format.format)
+		isp_dvp_2ndframe_config(vin);
