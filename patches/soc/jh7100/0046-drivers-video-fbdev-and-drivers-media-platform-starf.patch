+static int sc2235_write_array(struct i2c_client *client,
+			      struct regval_list *vals)
+{
+	int ret;
+	while (vals->reg_num != SC2235_REG_END) {
+		if (vals->reg_num == SC2235_REG_DELAY) {
+			msleep(vals->value);
+		} else {
+			ret = sc2235_write(client, vals->reg_num, vals->value);
+			if (ret < 0)
+				return ret;
+		}
+		vals++;
+	}
+	return 0;
+}
