+void vid_blktime_cfg_update(struct sf_fb_data *sf_dev)
+{
+     int hsa_dsi = (sf_dev->panel_info.dsi_sync_pulse==0) ? 0 : sf_dev->panel_info.dsi_hsa- 14;
